{
  "elements" : [
    {
      "label" : "row1",
      "args" : {
        "mainAxisAlignment" : "spaceBetween"
      },
      "children" : [
        {
          "type" : "text",
          "args": {
            "text" : "${returnLabel('formTitle', language ?? currentLanguage)}",
            "style": {
              "fontSize": "${scaleSize(60)}",
              "color": "#000000",
              "fontWeight" : "bold"
            }
          }
        },
        {
          "type" : "container",
          "args": {
            "width": "${scaleSize(225)}",
            "height": "${scaleSize(120)}"
          },
          "children" : [
            {
              "type" : "set_value",
              "children" : [
                {
                  "type": "dropdown_button_form_field",
                  "id": "language",
                  "args": {
                    "value" : "en-US",
                    "items": [
                      "en-US",
                      "pl"
                    ]
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "label" : "column2",
      "args" : {
        "crossAxisAlignment" : "start"
      },
      "children": [
        {
          "type" : "sized_box",
          "args" : {
            "height" : "${scaleSize(40)}"
          }
        },
        {
          "type" : "text",
          "args": {
            "text" : "${returnLabel('name', language ?? currentLanguage)}",
            "style": {
              "fontSize": "${scaleSize(45)}",
              "color": "#616161"
            }
          }
        },
        {
          "type" : "sized_box",
          "args" : {
            "height" : "${scaleSize(20)}"
          }
        },
        {
          "type" : "container",
          "args": {
            "width": "${scaleSize(735)}",
            "height": "${scaleSize(120)}"
          },
          "children" : [
            {
              "type": "text_form_field",
              "id": "editName",
              "args": {
                "decoration" : {
                  "hintText" : "Insert first information",
                  "border" : {
                    "type" : "outline",
                    "borderSide" : {
                      "gapPadding" : "1.0",
                      "color" : "#000000"
                    }
                  },
                  "filledBorder" : {
                    "type" : "outline",
                    "borderSide" : {
                      "width" : "10.0",
                      "color" : "#000000"
                    }
                  },
                  "focusedBorder" : {
                    "type" : "outline",
                    "args" : {
                      "gapPadding" : "1.0",
                      "width" : "10.0"
                    }
                  }
                }
              }
            }
          ]
        },
        {
          "type" : "sized_box",
          "args" : {
            "height" : "${scaleSize(40)}"
          }
        }
      ]
    },
    {
      "label" : "column3",
      "args" : {
        "crossAxisAlignment" : "start"
      },
      "children" : [
        {
          "type" : "text",
          "args": {
            "text" : "${returnLabel('birthDate', language ?? currentLanguage)}",
            "style": {
              "fontSize": "${scaleSize(45)}",
              "color": "#616161"
            }
          }
        },
        {
          "type" : "sized_box",
          "args" : {
            "height" : "${scaleSize(20)}"
          }
        },
        {
          "type" : "container",
          "args": {
            "width": "${scaleSize(735)}",
            "height": "${scaleSize(120)}"
          },
          "children" : [
            {
              "type": "save_context",
              "args": {
                "key": "dialogContext"
              },
              "children" : [
                {
                  "type": "text_form_field",
                  "id": "editBirthDate",
                  "readOnly" : "true",
                  "args": {
                    "validators": [
                      {
                        "type": "required"
                      },
                      {
                        "type": "regex",
                        "regex" : "[A-Z]"
                      }
                    ],
                    "initialValue": "${pickedDate}",
                    "decoration" : {
                      "border" : {
                        "type" : "outline",
                        "borderSide" : {
                          "gapPadding" : "1.0",
                          "color" : "#000000"
                        }
                      },
                      "filledBorder" : {
                        "type" : "outline",
                        "borderSide" : {
                          "width" : "10.0",
                          "color" : "#000000"
                        }
                      },
                      "focusedBorder" : {
                        "type" : "outline",
                        "args" : {
                          "gapPadding" : "1.0",
                          "width" : "10.0"
                        }
                      },
                      "hintText" : "YYYY-MM-DD",
                      "suffixIcon": {
                        "type": "icon_button",
                        "args": {
                          "icon": {
                            "type": "icon",
                            "args": {
                              "icon": {
                                "codePoint": 984763,
                                "fontFamily": "MaterialIcons",
                                "size": 50
                              }
                            }
                          },
                          "onPressed": "${showDatePicker('dialogContext')}"
                        }
                      }
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "label" : "row2",
      "args" : {
        "mainAxisAlignment" : "center"
      },
      "children" : [
        {
          "type": "save_context",
          "args": {
            "key": "buttonContext"
          },
          "children": [
            {
              "type" : "set_value",
              "args" : {
                "firstInfo" : "editName"
              },
              "children" : [
                {
                  "type": "text_button",
                  "args": {
                    "style": {
                      "foregroundColor": {
                        "pressed": "FF2196F3",
                        "focused": "FF2196F3",
                        "empty": "FFF44336"
                      }
                    },
                    "onPressed" : "${validateForm('buttonContext')}"
                  },
                  "child": {
                    "type": "text",
                    "args": {
                      "text": "SUBMIT"
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}